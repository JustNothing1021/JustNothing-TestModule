<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"
            android:text="@string/welcome_app_title"
            android:textColor="#333333"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/align"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/welcome_subtitle_description"
            android:textAlignment="center"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:text="@string/welcome_app_subtitle"
            android:textColor="#666666"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_hook_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#4CAF50"
            android:padding="16dp"
            android:text="@string/hook_config_management"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_get_httpconf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#2196F3"
            android:padding="16dp"
            android:text="@string/get_http_config"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_log_viewer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FF9800"
            android:padding="16dp"
            android:text="@string/log_viewer"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_script_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#9C27B0"
            android:padding="16dp"
            android:text="@string/script_manager"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_module_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#E91E63"
            android:padding="16dp"
            android:text="@string/module_status_monitor"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_performance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#00BCD4"
            android:padding="16dp"
            android:text="@string/performance_monitor"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_data_export"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FF5722"
            android:padding="16dp"
            android:text="@string/data_export"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#607D8B"
            android:padding="16dp"
            android:text="@string/interface_settings"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_did_you_know"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#673AB7"
            android:padding="16dp"
            android:text="@string/did_you_know"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_ai_art_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FF4081"
            android:padding="16dp"
            android:text="@string/ai_art_gallery"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#795548"
            android:padding="16dp"
            android:text="@string/about"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/version_not_loaded"
            android:textColor="#999999"
            android:textSize="14sp" />

    </LinearLayout>

</ScrollView>
